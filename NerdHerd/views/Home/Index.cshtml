@{
    ViewBag.Title = "Home Page";
}

<header>
	<div class="sheet backdrop">
		<div class="row">
			<div class="col s12 center-align">
				<h1 class="white-text">Quality Work</h1>
				<h3 class="white-text">Day in, day out.</h3>
				<br />
				<a class="btn white waves-effect" href="../views/jobs.html"><span class="blue-text text-darken-3"><strong>Create a Job Ticket</strong></span></a>
			</div>
		</div> <!-- End opening header -->
		<div class="container announcement">
			<div class="row">
				<div class="col s12 m10 l10 offset-m1 offset-l1">
					<div class="sheet z-depth-3 center-on-small-only">
						<span class="grey-text text-darken-1 news-title">Utilize Nerd Herd's top-of-the-line services today.</span>
						<button class="btn-flat grey lighten-3 waves-effect"><span class="grey-text text-darken-4">Get Started</span></button>
					</div>
				</div>
			</div>
		</div> <!-- End announcement container -->
		<div class="circuit"></div>
	</div> <!-- End sheet backdrop -->
</header> <!-- End header -->

<main>
	<div class="spacer"></div>

	<div class="container">
		<div class="row center-align">
			<div class="col s6 offset-s3">
				<h4 class="strong">We Aim to Please!</h4>
				<ul>
					<li><strong>We Make House Calls!</strong></li>
					<li><strong>There is no Request too Difficult!</strong></li>
					<li><strong>Free Smiles, High Fives n' Hugs! <i class="material-icons tiny">favorite</i></strong></li>
				</ul>
			</div>
		</div> <!-- End goal statement -->

		<div class="row">
			<div class="col s12">
				<div class="col s6">
					<img class="responsive-img" src="~/Content/Images/computers.jpg" alt="..." />
				</div>
				<div class="col s6">
					<h4 class="strong">PCs &amp; Laptops</h4>
					<p>
						We specialize in working with PCs and Laptops. There are very few issues that we cannot fix!
						We work with Windows, Mac OS, and Linux systems.
					</p>
				</div>
			</div>
		</div> <!-- End PCs & Laptops row -->

		<div class="row">
			<div class="col s12">
				<div class="col s6">
					<h4 class="strong">iOS &amp; Android Mobile Devices</h4>
					<p>We can work with even the smallest devices to quickly repair them and return them to you!</p>
				</div>
				<div class="col s6">
					<img class="responsive-img" src="~/Content/Images/mobile.png" alt="..." />
				</div>
			</div>
		</div> <!-- End IOS & Android row -->

	</div> <!-- End main container -->

	<div class="sheet z-depth-3 amber">
		<div class="row">
			<div class="col s1 push-s6 hide-on-med-and-down">
				<i class="material-icons large">favorite</i>
			</div>
			<div class="col s12 m4 l4 push-l6">
				<h4>Help Us Out</h4>
				<span>
					Leave us a Like! on <a class="grey-text text-darken-3" href="#">Facebook</a>,
					subscribe to our <a class="grey-text text-darken-3" href="#">Twitter</a> feed
					or make a <a class="grey-text text-darken-3" href="#">Donation<i class="material-icons tiny red-text">favorite</i></a>
				</span>
			</div>
		</div>
	</div> <!-- End donation sheet -->

</main> <!-- End main -->